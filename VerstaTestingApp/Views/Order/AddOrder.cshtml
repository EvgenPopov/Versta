@model Order

<h2>Оформление груза</h2>
<p>Пожалуйста введите данные, и мы доставим ваш груз как можно скорее</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AddOrder" method="post">

    <div class="form-group">
        <label>Город доставки: </label>
        <input asp-for="RecipientCity   " class="form-control" />
        @*<div><span asp-validation-for="RecipientCity" class="text-danger"></span></div>*@
    </div>

    <div class="form-group">
        <label>Адресс доставки: </label>
        <input asp-for="RecipientAdress" class="form-control" />
        @*<div><span asp-validation-for="RecipientAdress" class="text-danger"></span></div>*@
    </div>

    <div class="form-group">
        <label>Город, из которого отправляете груз: </label>
        <input asp-for="SenderCity" class="form-control" />
        @*<div><span asp-validation-for="SenderCity" class="text-danger"></span></div>*@
    </div>

    <div class="form-group">
        <label>Адресс отправки: </label>
        <input asp-for="SenderAdress" class="form-control" />
        @*<div><span asp-validation-for="SenderAdress" class="text-danger"></span></div>*@
    </div>

    <div class="form-group">
        <label>Вес груза: </label>
        <input asp-for="CargoWeight" class="form-control" />
        @*<div><span asp-validation-for="CargoWeight" class="text-danger"></span></div>*@
    </div>

    <div class="form-group">
        <label>Дата забора: </label>
        <input asp-for="PickUpDate" asp-format="{0:d}" class="form-control" />
        @*<div><span asp-validation-for="PickUpDate" class="text-danger"></span></div>*@
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Завершить отправку" />
    </div>

</form>